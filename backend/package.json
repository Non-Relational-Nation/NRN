{
  "name": "nrn-backend",
  "version": "1.0.0",
  "description": "Non-Relational Nation - Social Media Backend",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "dotenvx run -- tsx watch ./src/server.ts",
    "prod": "dotenvx run -- node --import tsx ./src/server.ts",
    "test": "jest",
    "test:db": "ts-node src/scripts/testDb.ts",
    "setup:user-collection": "node src/scripts/createUserCollection.js"
  },
  "keywords": [
    "social-media",
    "non-relational",
    "typescript",
    "backend"
  ],
  "author": "Non-Relational Nation",
  "license": "MIT",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.48.4",
    "@fedify/express": "^0.2.1",
    "@fedify/fedify": "^1.7.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "jose": "^6.0.12",
    "mongoose": "^8.17.0",
    "tsx": "^4.20.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/mongodb": "^4.0.6",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^20.19.9",
    "@types/supertest": "^6.0.3",
    "jest": "^29.5.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
